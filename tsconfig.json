{
    "compilerOptions": {
        "target": "es2015",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["es2020"],
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "*": ["typings/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "skipLibCheck": true
    },
    "include": [
        "lib/**/*",
        "tests/**/*",
        "tools/**/*",
        "typings/**/*",
        "docs/.vitepress/**/*.ts"
    ]
}
