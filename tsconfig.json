{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "paths": {
            "*": ["./typings/*"]
        },
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true
    },
    "include": [
        "lib/**/*",
        "tests/**/*",
        "tools/**/*",
        "typings/**/*",
        "tsdown.config.ts",
        "docs/.vitepress/**/*.ts",
        "docs/.vitepress/**/*.mts"
    ]
}
